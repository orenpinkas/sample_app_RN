<?xml version="1.0" encoding="utf-8"?>
<com.outbrain.OBSDK.Viewability.OBCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ob_sf_horizontal_item"
    android:layout_width="240dp"
    android:layout_height="240dp"
    android:layout_gravity="center"
    card_view:cardElevation="0dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:id="@+id/ob_horizontal_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/outbrain_image_wrapper_layout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ob_horizontal_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/ob_paid_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="#4d4d4d"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:text="Sponsored"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/outbrain_rec_disclosure_image_view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="top|right"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="2.5dp"
                android:paddingTop="2.5dp" />

            <ImageView
                android:id="@+id/outbrain_rec_logo_image_view"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true" />


        </FrameLayout>

        <TextView
            android:id="@+id/ob_horizontal_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/outbrain_image_wrapper_layout"
            android:layout_marginTop="4dp"
            android:text="This is the recommendations text"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:textColor="#282828" />

        <TextView
            android:id="@+id/ob_rec_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ob_horizontal_item_title"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:text="Source Name"
            android:textColor="#707070"
            android:textSize="12sp" />

    </RelativeLayout>

</com.outbrain.OBSDK.Viewability.OBCardView>